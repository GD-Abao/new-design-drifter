---
// 客製化 Pagefind 搜尋組件
---

<div>
	<!-- 搜尋按鈕 -->
	<button
		id="searchButton"
		class="cursor-pointer block hover:scale-125 duration-300"
		aria-label="Search"
		aria-controls="searchModal"
		aria-expanded="false"
	>
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="18"
			height="18"
			viewBox="0 0 24 24"
			fill="none"
			stroke="currentColor"
			stroke-width="1"
			stroke-linecap="round"
			stroke-linejoin="round"
		>
			<path d="m21 21-4.34-4.34"></path>
			<circle cx="11" cy="11" r="8"></circle>
		</svg>
	</button>

	<!-- 搜尋彈窗 -->
	<div
		id="searchModal"
		class="hidden fixed inset-0 z-50"
		role="dialog"
		aria-modal="true"
		aria-labelledby="searchTitle"
		aria-hidden="true"
	>
		<!-- 遮罩 -->
		<div id="searchModalMask" class="absolute inset-0 bg-black opacity-80">
		</div>

		<!-- 搜尋內容 -->
		<div class="relative max-w-3xl mx-auto translate-y-20">
			<h2 id="searchTitle" class="sr-only">Search</h2>
			<div
				class="dark:bg-black bg-white border dark:border-white/20 border-black/20 rounded-lg shadow-xl overflow-hidden"
			>
				<!-- 搜尋輸入框 -->
				<div class="border-b dark:border-white/20 border-black/20 p-4">
					<input
						id="searchInput"
						type="text"
						placeholder="Search..."
						class="w-full bg-transparent outline-none text-base"
						autocomplete="off"
					/>
				</div>

				<!-- 搜尋結果 -->
				<div
					id="searchResults"
					class="max-h-[60vh] overflow-y-auto p-4 space-y-4"
				>
					<div class="text-sm opacity-60 text-center py-8">
						Type to search...
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script is:inline>
	let pagefind = null;
	let previousFocus = null;

	async function initPagefind() {
		if (!pagefind) {
			// @ts-ignore
			pagefind = await import("/pagefind/pagefind.js");
		}
		return pagefind;
	}

	document.addEventListener("DOMContentLoaded", () => {
		const searchButton = document.getElementById("searchButton");
		const searchModal = document.getElementById("searchModal");
		const searchModalMask = document.getElementById("searchModalMask");
		const searchInput = document.getElementById("searchInput");
		const searchResults = document.getElementById("searchResults");

		if (!searchButton || !searchModal || !searchInput || !searchResults) return;

		// 開啟搜尋彈窗
		searchButton.addEventListener("click", async () => {
			previousFocus = document.activeElement;
			searchModal.classList.remove("hidden");
			searchModal.setAttribute("aria-hidden", "false");
			searchButton.setAttribute("aria-expanded", "true");
			document.body.style.overflow = "hidden";
			searchInput.focus();
			await initPagefind();
		});

		// 關閉搜尋彈窗的函數
		const closeModal = () => {
			searchModal.classList.add("hidden");
			searchModal.setAttribute("aria-hidden", "true");
			searchButton.setAttribute("aria-expanded", "false");
			document.body.style.overflow = "";
			searchInput.value = "";
			searchResults.innerHTML = `<div class="text-sm opacity-60 text-center py-8">Type to search...</div>`;
			if (previousFocus instanceof HTMLElement) {
				previousFocus.focus();
			}
		};

		// 關閉搜尋彈窗
		searchModalMask?.addEventListener("click", closeModal);

		// ESC 鍵關閉
		document.addEventListener("keydown", (e) => {
			if (e.key === "Escape" && !searchModal.classList.contains("hidden")) {
				closeModal();
			}
		});

		// 搜尋功能
		let debounceTimer;
		searchInput.addEventListener("input", async () => {
			clearTimeout(debounceTimer);
			const query = searchInput.value.trim();

			if (!query) {
				searchResults.innerHTML = `<div class="text-sm opacity-60 text-center py-8">Type to search...</div>`;
				return;
			}

			debounceTimer = setTimeout(async () => {
				searchResults.innerHTML = `<div class="text-sm opacity-60 text-center py-8">Searching...</div>`;

				try {
					const pf = await initPagefind();
					const search = await pf.search(query);

					if (search.results.length === 0) {
						searchResults.innerHTML = `<div class="text-sm opacity-60 text-center py-8">No results found</div>`;
						return;
					}

					// 顯示結果
					const resultsHTML = await Promise.all(
						search.results.slice(0, 10).map(async (result) => {
							const data = await result.data();
							return `
								<a href="${data.url}" class="block p-4 rounded-lg hover:bg-black/5 dark:hover:bg-white/5 transition-colors">
									<div class="font-medium mb-1">${data.meta.title || "Untitled"}</div>
									<div class="text-sm opacity-60 line-clamp-2">${data.excerpt || ""}</div>
								</a>
							`;
						})
					);

					searchResults.innerHTML = resultsHTML.join("");
				} catch (error) {
					console.error("Search error:", error);
					searchResults.innerHTML = `<div class="text-sm opacity-60 text-center py-8">Search error occurred</div>`;
				}
			}, 300);
		});
	});
</script>

<style>
	#searchInput::placeholder {
		opacity: 0.6;
	}
</style>
