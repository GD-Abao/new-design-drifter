---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description?: string;
	image?: string;
	imageAlt?: string;
	type?: "website" | "article";
	publishedTime?: string;
	modifiedTime?: string;
	section?: string;
	tags?: string[];
}

const {
	title,
	description,
	image,
	imageAlt,
	type,
	publishedTime,
	modifiedTime,
	section,
	tags,
} = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Design Drifter</title>

		<SEO
			title={title}
			description={description}
			image={image}
			imageAlt={imageAlt}
			type={type}
			publishedTime={publishedTime}
			modifiedTime={modifiedTime}
			section={section}
			tags={tags}
		/>
	</head>
	<body class="font-display">
		<main class="dark:bg-black bg-white min-h-svh dark:text-white text-black">
			<Header />
			<slot />
			<Footer />
		</main>
	</body>
</html>
